pkgname=gituserchrome
pkgver=1.2
pkgrel=1
pkgdesc="An automation tool to git userChrome themes."
arch=('x86_64')
license=('MIT')
depends=('webkit2gtk' 'git')
source=(gituserChrome appicon.png gituserChrome.desktop gituserChrome_nvidia.desktop)
sha256sums=(810f624e8e8da3e46218a10541ed44a4f7a32a20ba271b20ebee3568e9ea7068 c7ea61a96bd86b493f1d4b7d64d044abb2238fdfe3d33c74aa81c6615f0db62c 32f570adabcdf5134b4a95a66cb7b6c90fffc1e493b6062c609af29c4147a7de bd80027e647f8c7b85456a67d2d9b2a75b273277c31c3c792a79cf1425a36bdd)
package() {
    install -Dm755 "$srcdir/gituserChrome" "$pkgdir/usr/bin/gituserChrome"
    install -Dm644 "$srcdir/appicon.png" "$pkgdir/usr/share/icons/hicolor/256x256/apps/gituserChrome.png"
    install -Dm644 "$srcdir/gituserChrome.desktop" "$pkgdir/usr/share/applications/gituserChrome.desktop"
    install -Dm644 "$srcdir/gituserChrome_nvidia.desktop" "$pkgdir/usr/share/applications/gituserChrome_nvidia.desktop"
}
