pkgname=gituserchrome
pkgver=1.1
pkgrel=1
pkgdesc="An automation tool to git userChrome themes."
arch=('x86_64')
license=('MIT')
depends=('webkit2gtk')
source=(gituserChrome appicon.png gituserChrome.desktop)
sha256sums=(9e8b0ce48d29035a5f0c2e3276c8a241c7520f4a774386d6e54af3de8f760774 c7ea61a96bd86b493f1d4b7d64d044abb2238fdfe3d33c74aa81c6615f0db62c 32f570adabcdf5134b4a95a66cb7b6c90fffc1e493b6062c609af29c4147a7de)
package() {
    install -Dm755 "$srcdir/gituserChrome" "$pkgdir/usr/bin/gituserChrome"
    install -Dm644 "$srcdir/appicon.png" "$pkgdir/usr/share/icons/hicolor/256x256/apps/gituserChrome.png"
    install -Dm644 "$srcdir/gituserChrome.desktop" "$pkgdir/usr/share/applications/gituserChrome.desktop"
}
